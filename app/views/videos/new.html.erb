<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
       <h2 class="page-header"><span class="glyphicon glyphicon-upload"></span> Upload New <span id="header">Video <i class="glyphicon glyphicon-film"></i></span></h2>
       <%= form_for( @video) do |f| %>
       <% if @video.errors%>
        <% @video.errors.full_messages.each do |msg|%>
         <div class="alert alert-danger"><%= msg %></div>
        <%end%>
        <%end%>
       <div class="form-group">
           <%= f.label :song_title%>
           <%= f.text_field :song_title, class:'form-control'%>
       </div>
        <div class="form-group">
           <%= f.label :singer_name%>
           <%= f.text_field :singer_name, class:'form-control'%>
       </div>
       <div class="form-group">
           <%= f.label :category%>
           <%= f.select :type_id, Type.all.collect {|x|[x.name, x.id]}, {:include_blank => 'Select Category'}, class:'form-control'%>
       </div>
        <div class="form-group">
           <%= f.label :rabel_name %>
           <%= f.text_field :rabel_name, class:'form-control'%>
       </div>
        <div class="form-group">
           <%= f.label :youtube_link, class:'glyphicon glyphicon-link' %>
           <%= f.text_field :youtube_link, class:'form-control'%>
       </div>
       <div class="form-group">
           <%= f.text_field :user_id, class:'hidden', value:"#{current_user.id}"%>
       </div>
       <div class="form-group">
        <%= f.submit 'Publish Video', class:'btn btn-primary'%>
        <%= link_to  "Cancel", root_path, class:'btn btn-default' %>
       </div>
       <% end %>
    </div>
    <div class="col-md-4"></div>
</div>
