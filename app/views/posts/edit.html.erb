<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
       <h2 class="page-header"><span class="glyphicon glyphicon-upload"></span> Add New <span id="header">Post <i class="glyphicon glyphicon-comment"></i></span></h2>
       <%= form_for( @post) do |f| %>
       <% if @post.errors%>
        <% @post.errors.full_messages.each do |msg|%>
         <div class="alert alert-danger"><%= msg %></div>
        <%end%>
        <%end%>
       <div class="form-group">
           <%= f.label :title%>
           <%= f.text_field :title, class:'form-control'%>
       </div>
        <div class="form-group">
           <%= f.label :body%>
           <%= f.cktext_area :body, class:'form-control'%>
       </div>
       <div class="form-group">
           <%= f.label :category%>
           <%= f.select :category_id, Category.order(:name).collect {|x|[x.name, x.id]}, {:include_blank => 'Select category'}, class:'form-control'%>
       </div>
       <div class="form-group">
           <%= f.text_field :user_id, class:'hidden', value:"#{current_user.id}"%>
       </div>
       <div class="form-group">
           <%= f.label :cover_picture, class:'glyphicon glyphicon-upload' %>
           <%= f.file_field :coverpicture, class:'form-control'%>
           <% if @post.coverpicture.present?%>
            <%= image_tag  "#{@post.coverpicture}", width:'15%' %>
           <% else %>
           <p>Post have no cover image</p>
           <% end %>
       </div>
       <div class="form-group">
        <%= f.submit 'Publish Post', class:'btn btn-primary'%>
        <%= link_to  "Cancel", root_path, class:'btn btn-default' %>
       </div>
       <% end %>
    </div>
    <div class="col-md-1"></div>
</div>
