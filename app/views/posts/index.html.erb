<h2 class="page-header">The Lattest News
  <% if current_user%>
    <%= link_to  "Add post ", new_post_path, class:'btn btn-info pull-right' %>
  <% end %>
</h2>
<div class="row">
   <div class="col-md-10">
      <div class="row">
        <% if @posts.exists? %>
            <% @posts.each do |post| %>
               <div class="col-md-4">
                   <div class="panel panel-default">
                      <div class="panel panel-heading">
                         <%= link_to  post.title, post_path(post) %> 
                      </div>
                      <div class="panel panel-body">
                          <% if post.coverpicture.present? %>
                            <%= image_tag  "#{post.coverpicture}", width:'100%' %>
                          <% else %>
                            <%= image_tag  "img/image2.jpg" %>
                          <% end %><br/>
                          <%= raw post.body.truncate(100)%>
                          <p><strong>Posted on: </strong><%= post.created_at.to_time.strftime('%b %e, %Y')%></p>
                          <p><strong>Posted by: </strong><%= post.user.name%></p>
                      </div>
                      <div class="panel panel-footer">
                          <%= link_to  "Read more", post_path(post), class:'btn btn-block btn-success' %>
                      </div> 
                   </div>
               </div>
            <% end%>
        <!-- pagination -->
        <% else %>
           <p>No post available!!</p>
        <% end %> 
      </div> 
   </div>
   <div class="col-md-2">
       <% if @categories.exists %>
           <% @categories.each do |category| %>
             <% if category.name.present? %>               
               <li class="list-group-item"><%= link_to  category.name, category_path(category) %></li>
             <% end %>
           <% end %>
       <% else%>
       <p>No category Available</p>
       <% end %>
   </div> 
</div>


